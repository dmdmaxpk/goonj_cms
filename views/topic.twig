{% extends 'layout.twig' %}

    {% block head %}
        <link href="https://cdnjs.cloudflare.com/ajax/libs/fastselect/0.7.3/fastselect.min.css" rel="stylesheet">
        <link href="/css/bootstrap-editable.css" rel="stylesheet"/>
        <style>
            .fstToggleBtn {
                padding: 5px 0;
            }
            .fstResultItem {
                padding: 1px 10px;
            }
        </style>
    {% endblock %}

    {% block body %}
        <div class="row page-titles">
            <div class="col-md-5 align-self-center">
                <h3 class="text-themecolor">Topics</h3>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-12">
                    <div class="card card-body">
                        <div class="table-responsive m-t-40">
                            <table id="myTable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Weightage</th>
                                        <th>Added Date</th>
                                        <th>Options</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for topic in list %}
                                        <tr>
                                            <td><a href="#" class="editable" data-type="text" data-pk='{{ topic._id }}' data-name="name" data-send="always" data-url='/topic/editable' data-value='{{ topic.name }}'></a></td>
                                            <td><a href="#" class="editable" data-type="text" data-pk='{{ topic._id }}' data-name="description" data-send="always" data-url='/topic/editable' data-value='{{ topic.description }}'></a></td>
                                            <td>
                                                <input  
                                                    type="text"
                                                    class="fastSelect weightage"
                                                    value='{{ topic.weightage }}'
                                                    data-id={{ topic._id }}
                                                    data-initial-value='[{"text": "{{ topic.weightage }}", "value" : "{{ topic.weightage }}"}]'
                                                    {# data-user-option-allowed="true" #}
                                                    data-url="/topic/weightage"
                                                    data-load-once="true"
                                                    name="weightage"
                                                />
                                            </td>
                                            <td>{{ topic.added_dtm|date("Y-m-d H:i:s", false) }}</td>
                                            <td class="text-nowrap">
                                                <a class="delete" href="#" data-toggle="tooltip" data-original-title="Delete" data-url="/topic/delete?_id={{ topic._id }}"> <i class="fa fa-close text-danger"></i> </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    
                </div>
            </div>  
            <div class="row">
                <div class="col-12">
                    <div class="card card-body">
                        <h2>Add Topic</h2>
                        <form method="post" action="/topic/add">
                            <div class="row">
                                <div class="col-6">
                                    <input type="text" class="form-control" id="title" name="name" placeholder="Name">
                                </div>
                                <div class="col-6">
                                    <input type="text" class="form-control" id="title" name="description" placeholder="Description">
                                </div>
                                <div class="col-6">
                                    <h5>Weightage</h5>
                                    <input  
                                        type="text"
                                        class="fastSelect"
                                        data-url="/topic/weightage"
                                        data-load-once="true"
                                        name="weightage"
                                    />
                                </div>
                                <div class="col-12">
                                    <button type="submit" id="btnSubmit" class="btn btn-primary float-right" style="margin: 20px 0; width: 200px;">Add Topic</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>     
         </div>
    {% endblock %}
    {% block foot %}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/fastselect/0.7.3/fastselect.standalone.min.js"></script>
        <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
        <script src="/js/bootstrap-editable.min.js"></script>
        <script>
            $(document).ready(function() {

                // For sorting Weightage
                $.fn.dataTable.ext.order['dom-input'] = function (settings, col) {
                    return this.api().column(col, { order: 'index' }).nodes().map(function (td, i) {
                        return $('input', td).val();
                    });
                }
                
                // Initialize Datatable
                $('#myTable').DataTable({
                    "columnDefs": [
                        {
                            "orderDataType": "dom-input",
                            "targets": 0, // Just the first column
                        }
                    ]
                });
                
                // Initialize Editable
                $.fn.editable.defaults.mode = 'inline';     
                $('.editable').editable();

                // Initialize FastSelect for input
                $('.fastSelect').fastselect();

                // Delete
                $(".delete").click(function () {
                    var url = $(this).attr("data-url");
                    $.get(url, function (data) {
                        location.reload();
                    });
                });

                // Post call when weightage change
                $(".weightage").change(function () {
                    let _id = $(this).attr('data-id');
                    let weightage = $(this).val();
                    console.log(_id, weightage);
                    $.post( "/topic/update?_id=" + _id ,  { weightage }, function( data ) {
                        alert(data);
                    });
                });

                // Initialize editable and fastSelect on pagination
                $(".dataTables_paginate").click(function() {
                    $('.editable').editable();
                    $('.fastSelect').fastselect();

                    // Delete
                    $(".delete").click(function () {
                        var url = $(this).attr("data-url");
                        $.get(url, function (data) {
                            location.reload();
                        });
                    });

                    // Post call when weightage change
                    $(".weightage").change(function () {
                        let _id = $(this).attr('data-id');
                        let weightage = $(this).val();
                        console.log(_id, weightage);
                        $.post( "/topic/update?_id=" + _id ,  { weightage }, function( data ) {
                            alert(data);
                        });
                    });
                });
            });
        </script>
    {% endblock %}       